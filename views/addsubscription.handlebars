
<h2>New Subscription</h2>

<form>
    <div class="form-group">
      <label for="subName1">Name</label>
      <input type="subName" class="form-control" id="subName1">
    </div>

    <div class="form-group">
        <label for="description1">Description</label>
        <input type="description" class="form-control" id="description1">
    </div>
      
    <div class="form-group">
        <label for="link1">Link</label>
        <input type="link" class="form-control" id="link1">
    </div>      

    <div class="form-group">
      <label for="initDate1">Initiation Date</label>
      <input type="initDate" class="form-control" id="initDate1">
    </div>

    <div class="form-group">
        <label for="cycle1">Cycle</label>
        <select class="form-control" name="cycle" id="cycle1">
            <option value="Annual">Annual</option>"
            <option value="Monthly">Monthly</option>"
        </select>
    </div>

    <div class="form-group">
        <label for="payment1">Payment Amount</label>
        <input type="payment" class="form-control" id="payment1">
    </div>

    <div class="form-group form-check">
      <input type="checkbox" class="form-check-input" id="remind1">
      <label class="form-check-label" for="remind1">Remind Me</label>

    </div>

    <button type="submit" class="btn btn-primary">Add Subscription</button>
  </form>

  <script src="./js/addSub.js"></script>